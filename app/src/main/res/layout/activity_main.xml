<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:scrimAnimationDuration="300"
            app:title=""
            app:titleEnabled="false">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/task_header_bg"
                        android:scaleType="centerCrop"
                        android:contentDescription="背景图" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/header_gradient_overlay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的任务清单"
                        android:textSize="30sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_gravity="bottom|start"
                        android:layout_marginStart="28dp"
                        android:layout_marginBottom="28dp"
                        android:elevation="4dp" />

                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        app:menu="@menu/main_menu"
                        android:layout_gravity="top" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_scrollFlags="scroll|enterAlways">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 背景渐变效果 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@drawable/tab_container_gradient" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabTextColor="@color/text_secondary"
                    app:tabSelectedTextColor="@color/text_primary"
                    app:tabIndicator="@null"
                    app:tabRippleColor="@android:color/transparent"
                    app:tabGravity="fill"
                    app:tabTextAppearance="@style/TextAppearance.App.TabText">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/ic_all_tasks"
                        android:text="所有任务" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/ic_today"
                        android:text="今日任务" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/ic_completed"
                        android:text="已完成" />
                </com.google.android.material.tabs.TabLayout>

                <!-- 顶部微妙阴影 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="top"
                    android:background="@drawable/tab_top_shadow" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:overScrollMode="never"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="28dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddTask"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:contentDescription="添加任务"
            app:srcCompat="@drawable/ic_add_circle"
            app:backgroundTint="@color/accent"
            app:tint="@color/white"
            app:borderWidth="0dp"
            app:elevation="12dp"
            app:fabCustomSize="68dp"
            app:maxImageSize="30dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircularFAB"
            android:stateListAnimator="@animator/fab_state_list_anim"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/fab_shadow"
            app:layout_constraintBottom_toBottomOf="@id/fabAddTask"
            app:layout_constraintEnd_toEndOf="@id/fabAddTask"
            app:layout_constraintStart_toStartOf="@id/fabAddTask"
            app:layout_constraintTop_toTopOf="@id/fabAddTask" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/emptyStateCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="28dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:cardCornerRadius="28dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center"
            android:background="@drawable/card_gradient_background">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/empty_list_illustration"
                android:contentDescription="没有任务" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="暂无任务"
                android:textSize="26sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="点击右下角的 + 添加新任务"
                android:textSize="17sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/text_secondary"
                android:textAlignment="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAddFirstTask"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="创建第一个任务"
                android:textSize="17sp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/accent"
                app:cornerRadius="20dp"
                app:elevation="6dp"
                app:icon="@drawable/ic_add_circle"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                android:stateListAnimator="@animator/button_state_list_anim" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
