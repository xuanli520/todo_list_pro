<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础应用主题 -->
    <style name="Theme.Todo_list" parent="Theme.Material3.Light.NoActionBar">
        <!-- 主要品牌色 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- 次要品牌色 -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- 组件默认样式 -->
        <item name="materialCardViewStyle">@style/Widget.Todo_list.CardView</item>
        <item name="chipStyle">@style/Widget.Todo_list.Chip</item>
    </style>

    <!-- 卡片视图样式 -->
    <style name="Widget.Todo_list.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Chip样式 -->
    <style name="Widget.Todo_list.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/on_chip_background</item>
    </style>

    <style name="Theme.YourApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 其他样式属性 -->
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabPaddingTop">6dp</item>
        <item name="tabPaddingBottom">6dp</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabIconTint">@color/tab_icon_color_selector</item>
    </style>

    <style name="Theme.TodoList" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


</resources>
